/* pages/login/login.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  padding: 48rpx 32rpx;
  min-height: 100vh;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-form {
  margin-top: 48rpx;
}

.button-group {
  margin-top: 48rpx;
}

.button-group .t-button {
  margin-bottom: 32rpx;
}

.t-input .t-input__label {
  min-width: 100rpx !important;
  text-align: right;
}