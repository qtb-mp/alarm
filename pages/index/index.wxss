/**index.wxss**/
page {
  background: #fff;
}

.container {
  padding: 0 32rpx 100rpx;
}

.header {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 32rpx 32rpx;
}

.police-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  margin: 48rpx 0;
  padding: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  gap: 32rpx;
}
.grid-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 108rpx;
  background-color: #E6F7F9;
  color: #4B5563;
  border-radius: 24rpx;
  padding: 32rpx 0;
}

.process-container {
  margin: 48rpx 0;
  padding: 16rpx;
  background: #fff;
  border-radius: 24rpx;
}

.bottom-button {
  margin: 48rpx 0;
}

/* 自定义网格样式 */
.t-grid-item {
  background: #f8f8f8;
  border-radius: 16rpx;
  margin: 16rpx;
}

/* 自定义步骤条样式 */
.t-steps {
  padding: 16rpx 0;
}
