.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  padding: 48rpx 32rpx;
  min-height: 100vh;
}

.register-header {
  padding: 64rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.register-form {
  margin-top: 48rpx;
}

.button-group {
  margin-top: 48rpx;
}

.button-group .t-button {
  margin-bottom: 32rpx;
}

.t-input {
  background-color: #fff;
} 

.register-form .t-input .t-input__label {
  min-width: 150rpx !important;
  text-align: right;
}