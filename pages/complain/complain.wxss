.container {
  padding: 32rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 48rpx;
  color: #333;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-section {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  margin-right: 16rpx;
  min-width: 4em;
}

.form-button-container {
  padding-top: 32rpx;
}

/* 自定义文本域样式 */
.t-textarea {
  background: #f5f5f5;
  border-radius: 8rpx;
  min-height: 240rpx;
  padding: 16rpx;
}

/* 单选按钮间距 */
.t-radio {
  margin-right: 32rpx;
}