/* pages/dispose/dispose.wxss */
.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx 30rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.complain-list {
  background-color: #fff;
}

.complain-item {
  padding: 30rpx;
  position: relative;
}

.complain-item.active {
  background-color: #fafafa;
}

.complain-item.active:active {
  background-color: #f0f0f0;
}

.complain-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.complain-time {
  font-size: 26rpx;
  color: #888;
}

.status-tag {
  font-size: 24rpx;
}

.complain-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  /* 最多显示3行 */
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.complain-response {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.response-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.response-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  /* 最多显示2行 */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.divider {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1rpx;
  background-color: #eee;
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 处理结果文本框样式 */
.response-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}