/* pages/publish/publish.wxss */
.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 32rpx;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
}

.content-section {
  margin-top: 32rpx;
}

.content-label {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  margin-bottom: 16rpx;
}

.button-container {
  margin-top: 48rpx;
}

/* 自定义文本域样式 */
.t-textarea {
  background: #f5f5f5;
  border-radius: 8rpx;
  min-height: 240rpx;
  padding: 16rpx;
}

/* 输入框样式调整 */
.t-input {
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}